---
import MainLayout from '@/layouts/MainLayout.astro';
import { ISPARTOF } from '@/data/constants';
import Button from '@/components/ui/Button.astro';

const title = 'KPHR | Contact Us';
const description =
  'Get in touch with KPHR for expert virtual assistant and HR support solutions tailored for small businesses.';
---

<MainLayout
  title={title}
  structuredData={{
    '@context': 'https://schema.org',
    '@type': 'WebPage',
    '@id': 'https://www.kphr.com/contact',
    url: 'https://www.kphr.com/contact',
    name: title,
    description: description,
    isPartOf: ISPARTOF,
    inLanguage: 'en-US',
  }}
  meta={description}
>
  <section class="w-full px-6 py-16">
    <div class="mx-auto max-w-6xl">
      <header class="mb-8">
        <h1 class="text-foreground text-3xl font-bold md:text-4xl">
          Contact Us
        </h1>
        <p class="text-muted-foreground mt-2">
          Tell us about your needs. We typically respond within one business
          day.
        </p>
      </header>

      <div class="grid gap-8 md:grid-cols-3">
        <div class="md:col-span-2">
          <div class="border-border bg-card rounded-md border p-2 md:p-4">
            <iframe
              title="Contact form"
              src="https://forms.fillout.com/t/25mc3peyLNus"
              loading="lazy"
              allow="clipboard-write; microphone; camera; geolocation"
              class="w-full rounded-md"
              style="border:0; height: 800px"></iframe>
          </div>
        </div>

        <aside class="space-y-6">
          <div class="border-border shadow-card rounded-md border p-6">
            <h3 class="text-foreground mb-3 text-xl font-semibold">
              What to expect
            </h3>
            <ul class="text-muted-foreground list-disc space-y-2 pl-5 text-sm">
              <li>Quick review of your message by our team.</li>
              <li>Followâ€‘up with clarifying questions if helpful.</li>
              <li>Clear next steps and timing for delivery.</li>
            </ul>
          </div>
          <div class="border-border rounded-md border p-6">
            <h3 class="text-foreground mb-3 text-xl font-semibold">
              Other ways to connect
            </h3>
            <div class="flex flex-wrap gap-3">
              <Button
                href="/request-va"
                class="bg-gradient-primary text-primary-foreground shadow-button"
                >Request VA</Button
              >
              <Button href="/blogs" variant="link" class="text-primary p-0"
                >Browse Blog</Button
              >
            </div>
            <p class="text-muted-foreground mt-4 text-xs">
              We respect your privacy and only use your info to follow up on
              your request.
            </p>
          </div>
        </aside>
      </div>
    </div>
  </section>
</MainLayout>

---
import MainLayout from '@/layouts/MainLayout.astro';
import { ISPARTOF } from '@/data/constants';

const title = 'KPHR | Newsletter';
const description =
  'Subscribe to the KPHR newsletter for the latest HR tips, insights, and updates tailored for small businesses in California.';
---

<MainLayout
  title={title}
  structuredData={{
    '@context': 'https://schema.org',
    '@type': 'WebPage',
    '@id': 'https://kphr.com/newsletter',
    url: 'https://kphr.com/newsletter',
    name: title,
    description: description,
    isPartOf: ISPARTOF,
    inLanguage: 'en-US',
  }}
  meta={description}
>
  <section class="bg-muted/30 w-full px-6 py-16">
    <div class="mx-auto max-w-7xl">
      <div class="flex items-center justify-center">
        <div
          class="sender-form-field"
          data-sender-form-id="mjos4hlrerk6lkxsjsz"
        >
        </div>
      </div>
    </div>
  </section>
</MainLayout>

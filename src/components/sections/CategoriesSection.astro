---
import Button from '@/components/ui/Button.astro';

const categories = ['Recruitment', 'Employee Relations', 'HR Strategy'];
---

<section class="w-full px-6 py-12">
  <div class="mx-auto max-w-6xl">
    <h2 class="text-foreground mb-8 text-3xl font-bold">Categories</h2>

    <div class="flex flex-wrap gap-4">
      {
        categories.map((category) => (
          <Button
            href={`/articles/tags/${category.toLowerCase().replace(/\s+/g, '-')}`}
            variant="outline"
            size="lg"
            class="hover:bg-primary hover:text-primary-foreground !rounded-full border-2 transition-colors"
          >
            {category}
          </Button>
        ))
      }
    </div>
  </div>
</section>

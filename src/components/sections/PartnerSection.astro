---
import Button from '@/components/ui/Button.astro';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
const ids = [
  'managing-employee-leave-employers-key-responsibilities',
  'top-3-hr-mistakes-small-businesses-should-avoid',
  'exempt-v-non-exempt-employees-understand-the-difference',
];
const articles: CollectionEntry<'articles'>[] = (
  await getCollection('articles')
)
  .filter((e) => ids.includes(e.id))
  .sort((a, b) => ids.indexOf(a.id) - ids.indexOf(b.id));
---

<section class="w-full px-6 py-16">
  <div class="mx-auto max-w-6xl">
    <div class="grid gap-8 md:grid-cols-3">
      <div class="md:col-span-2">
        <h2 class="text-foreground mb-12 text-3xl font-bold md:text-4xl">
          HR Insights That Matter
        </h2>

        <div class="grid gap-6 md:grid-cols-3">
          {
            articles.map((entry) => (
              <div class="text-center">
                <h3 class="text-primary mb-2 text-lg font-semibold">
                  {entry.data.title}
                </h3>
                {entry.data.excerpt && (
                  <p class="text-muted-foreground mb-4 text-sm">
                    {entry.data.excerpt}
                  </p>
                )}
                <Button
                  variant="link"
                  class="text-primary p-0"
                  href={`/articles/${entry.id}`}
                >
                  Read More
                </Button>
              </div>
            ))
          }
        </div>
      </div>

      <div>
        <div class="border-border shadow-card rounded-md border">
          <div class="p-6">
            <h3 class="text-foreground mb-4 text-xl font-semibold">
              Partner With Us
            </h3>
            <p class="text-muted-foreground mb-6">
              Advertise your services for free and connect with our audience of
              HR professionals.
            </p>
            <Button
              class="bg-gradient-primary text-primary-foreground shadow-button w-full"
            >
              Learn More
            </Button>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

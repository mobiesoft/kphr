---
import Button from '@/components/ui/Button.astro';
import Card from '@/components/ui/Card.astro';
import CardContent from '@/components/ui/CardContent.astro';
import CardHeader from '@/components/ui/CardHeader.astro';
import CardTitle from '@/components/ui/CardTitle.astro';
import Badge from '@/components/ui/Badge.astro';

const services = [
  {
    title: 'Legal Advisory Services',
    provider: 'Corporate Law Partners',
    description:
      'Expert employment law guidance for complex HR situations and compliance issues.',
    category: 'Legal',
    rating: '4.9/5',
    priceRange: '$200-500/hr',
    features: ['Employment Law', 'Contract Review', 'Compliance Audits'],
  },
  {
    title: 'Payroll & Benefits Management',
    provider: 'PayrollPro Solutions',
    description:
      'Comprehensive payroll processing and benefits administration for growing businesses.',
    category: 'Payroll',
    rating: '4.8/5',
    priceRange: '$50-150/employee',
    features: ['Automated Payroll', 'Benefits Admin', 'Tax Compliance'],
  },
  {
    title: 'Recruitment & Staffing',
    provider: 'TalentFinder Agency',
    description:
      'Professional recruitment services to help you find the right talent quickly.',
    category: 'Recruitment',
    rating: '4.7/5',
    priceRange: '15-25% of salary',
    features: ['Executive Search', 'Temp Staffing', 'Skills Assessment'],
  },
  {
    title: 'Training & Development',
    provider: 'SkillBoost Learning',
    description:
      "Custom training programs to enhance your team's skills and productivity.",
    category: 'Training',
    rating: '4.8/5',
    priceRange: '$100-300/employee',
    features: [
      'Leadership Training',
      'Compliance Training',
      'Skills Development',
    ],
  },
  {
    title: 'HR Technology Solutions',
    provider: 'HRTech Innovations',
    description:
      'Modern HRIS and employee management software tailored for small businesses.',
    category: 'Technology',
    rating: '4.6/5',
    priceRange: '$10-50/employee/month',
    features: ['HRIS Platform', 'Time Tracking', 'Performance Management'],
  },
  {
    title: 'Workplace Wellness Programs',
    provider: 'Wellness at Work',
    description:
      'Comprehensive employee wellness programs to boost morale and productivity.',
    category: 'Wellness',
    rating: '4.9/5',
    priceRange: '$25-75/employee/month',
    features: [
      'Mental Health Support',
      'Fitness Programs',
      'Stress Management',
    ],
  },
];
---

<section class="bg-muted/30 w-full px-6 py-16">
  <div class="mx-auto max-w-7xl">
    <div class="mb-12 text-center">
      <h2 class="text-foreground mb-4 text-3xl font-bold md:text-5xl">
        Partner Services
      </h2>
      <p class="text-muted-foreground mx-auto max-w-3xl text-xl">
        Trusted third-party providers to complement your HR needs. These vetted
        partners offer specialized services to support your business growth.
      </p>
    </div>

    <div class="mb-12 grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        services.map((service, index) => (
          <Card
            key={index}
            class="shadow-card border-0 transition-shadow hover:shadow-lg"
          >
            <CardHeader>
              <div class="mb-2 flex items-start justify-between">
                <Badge variant="secondary" class="mb-2">
                  {service.category}
                </Badge>
                <div class="text-muted-foreground text-sm">
                  ‚≠ê {service.rating}
                </div>
              </div>
              <CardTitle class="text-foreground text-xl leading-tight">
                {service.title}
              </CardTitle>
              <p class="text-primary text-sm font-medium">
                by {service.provider}
              </p>
            </CardHeader>
            <CardContent class="space-y-4">
              <p class="text-muted-foreground">{service.description}</p>

              <div class="flex flex-wrap gap-2">
                {service.features.map((feature, featureIndex) => (
                  <Badge key={featureIndex} variant="outline" class="text-xs">
                    {feature}
                  </Badge>
                ))}
              </div>

              <div class="flex items-center justify-between pt-2">
                <div class="text-sm">
                  <span class="text-muted-foreground">From </span>
                  <span class="text-foreground font-semibold">
                    {service.priceRange}
                  </span>
                </div>
              </div>

              <Button
                variant="outline"
                class="hover:bg-primary hover:text-primary-foreground w-full"
              >
                Learn More
              </Button>
            </CardContent>
          </Card>
        ))
      }
    </div>

    <div class="space-y-6 text-center">
      <Card class="shadow-card bg-gradient-subtle border-0 p-8">
        <h3 class="text-foreground mb-4 text-2xl font-bold">
          Want to be Featured?
        </h3>
        <p class="text-muted-foreground mx-auto mb-6 max-w-2xl">
          Are you a service provider looking to reach SMBs in need of HR
          support? Join our partner network and showcase your services to our
          growing community.
        </p>
        <div class="flex flex-col justify-center gap-4 sm:flex-row">
          <Button
            size="lg"
            class="bg-gradient-primary text-primary-foreground shadow-button"
          >
            Become a Partner
          </Button>
          <Button variant="outline" size="lg"> Learn About Partnership </Button>
        </div>
      </Card>
    </div>
  </div>
</section>

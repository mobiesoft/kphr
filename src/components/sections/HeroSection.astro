---
import Button from '@/components/ui/Button.astro';
---

<section
  class="from-brand-light to-background w-full bg-gradient-to-br px-6 py-16"
>
  <div class="mx-auto max-w-6xl text-center">
    <h1
      class="text-foreground mb-6 text-4xl leading-tight font-bold md:text-6xl"
    >
      Empowering Small Businesses <br />
      with Practical, Bilingual HR Support
    </h1>

    <div
      class="text-muted-foreground mb-8 flex flex-wrap justify-center gap-4 text-sm md:text-base"
    >
      <span>California Labor Law</span>
      <span>•</span>
      <span>Hiring & Termination</span>
      <span>•</span>
      <span>HR Compliance</span>
      <span>•</span>
      <span>Bilingual Support</span>
    </div>

    <Button
      size="lg"
      class="bg-gradient-primary text-primary-foreground shadow-button transition-opacity hover:opacity-90"
    >
      Schedule Free Consultation
    </Button>
  </div>
</section>

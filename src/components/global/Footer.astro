---
import { Image } from 'astro:assets';
import Logo from '@/images/main-logo.png';
const year = new Date().getFullYear();
---

<footer
  class="bg-gradient-primary text-primary-foreground mt-16 w-full px-6 py-12"
>
  <div class="mx-auto max-w-6xl">
    <div class="grid items-start gap-10 md:grid-cols-3">
      <!-- Contact Us -->
      <div>
        <h3 class="mb-4 text-lg font-semibold">Contact Us</h3>
        <ul class="space-y-3 text-sm md:text-base">
          <li class="flex items-start gap-3">
            <svg
              class="h-5 w-5 shrink-0 opacity-90"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M12 11.25a2.25 2.25 0 100-4.5 2.25 2.25 0 000 4.5z"></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M19.5 10.5c0 7.5-7.5 11.25-7.5 11.25S4.5 18 4.5 10.5a7.5 7.5 0 1115 0z"
              ></path>
            </svg>
            <div>
              <p>17588 Rowland St.</p>
              <p>City of Industry, CA 91748</p>
            </div>
          </li>
          <li class="flex items-center gap-3">
            <svg
              class="h-5 w-5 shrink-0 opacity-90"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M2.25 6.75c0-1.243 1.007-2.25 2.25-2.25h2.597a2.25 2.25 0 012.204 1.69l.36 1.31a2.25 2.25 0 01-.522 2.12l-1.153 1.153a11.25 11.25 0 005.31 5.31l1.153-1.153a2.25 2.25 0 012.12-.522l1.31.36a2.25 2.25 0 011.69 2.204V19.5a2.25 2.25 0 01-2.25 2.25h-1.5C9.34 21.75 2.25 14.66 2.25 6.75z"
              ></path>
            </svg>
            <a href="tel:+18887575747" class="hover:underline">(888) 757-KPHR</a
            >
          </li>
        </ul>
      </div>

      <!-- Quick Links -->
      <div class="flex flex-col items-center">
        <h3 class="mb-4 text-lg font-semibold">Quick Links</h3>
        <nav>
          <ul class="flex flex-col items-center space-y-2 text-sm md:text-base">
            <li><a class="hover:underline" href="/">Home</a></li>
            <li><a class="hover:underline" href="/about">About</a></li>
            <li><a class="hover:underline" href="/articles">Articles</a></li>
            <li><a class="hover:underline" href="/resources">Resources</a></li>
            <li><a class="hover:underline" href="/contact">Contact</a></li>
            <li>
              <a class="hover:underline" href="/newsletter">Newsletter</a>
            </li>
          </ul>
        </nav>
      </div>

      <!-- Brand + Tagline -->
      <div class="flex flex-col items-center gap-4 md:items-end">
        <Image
          src={Logo}
          alt="KPHR Logo"
          width={400}
          class="mb-2 h-12 w-auto brightness-0 invert"
        />
        <p class="max-w-xs text-center text-sm md:text-right md:text-base">
          Trusted HR solutions for<br />small businesses across California.
        </p>
      </div>
    </div>

    <div
      class="border-primary-foreground/20 mt-8 space-y-3 border-t pt-8 text-center"
    >
      <div class="flex justify-center gap-4 text-sm">
        <a href="/ccpa" class="hover:underline">CCPA Privacy</a>
        <span aria-hidden="true" class="opacity-50">|</span>
        <a href="/ada-statement" class="hover:underline">ADA Accessibility</a>
      </div>
      <p>Â© {year} KPHR. All rights reserved.</p>
    </div>
  </div>
</footer>

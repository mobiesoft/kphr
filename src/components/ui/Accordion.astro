---
interface Item {
  question: string;
  answer: string;
}

interface Props {
  items: Item[];
  title?: string;
}

const { items, title } = Astro.props;
---

<div class="w-full">
  {title && <h2 class="text-foreground mb-6 text-2xl font-bold">{title}</h2>}

  <div class="space-y-2">
    {
      items.map((item, index) => (
        <details class="border-border group rounded-lg border">
          <summary class="text-foreground hover:bg-muted/50 flex cursor-pointer items-center justify-between p-4 font-medium transition-colors">
            <span>{item.question}</span>
            <svg
              class="h-5 w-5 transition-transform group-open:rotate-180"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width={2}
                d="M19 14l-7 7m0 0l-7-7m7 7V3"
              />
            </svg>
          </summary>
          <div class="text-muted-foreground border-border border-t p-4">
            {item.answer}
          </div>
        </details>
      ))
    }
  </div>
</div>
